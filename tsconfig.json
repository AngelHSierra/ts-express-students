{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "public",
      "rootDir": "src",
      "baseUrl": ".",
      "allowJs": true,
      "lib": [
        "ES2021.String"
      ]
  },
  "exclude": ["node_modules"],
  "include": [
      "src/**/*"]
}